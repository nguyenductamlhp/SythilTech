<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <menuitem id="menu_google_drive_manager" name="Google Drives"/>

    <record id="action_google_drive" model="ir.actions.act_window">
        <field name="name">Google Drive</field>
        <field name="res_model">google.drive.account</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_google_drive" name="Google Drive"
        action="action_google_drive"
        sequence="10"
        parent="menu_google_drive_manager"/>

    <record id="action_drive_file_only" model="ir.actions.act_window">
        <field name="name">Files</field>
        <field name="res_model">drive.file</field>
        <field name="domain">[('is_dir', '=', False)]</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_drive_file_only" name="Files"
        action="action_drive_file_only"
        sequence="20"
        parent="menu_google_drive_manager"/>

    <record id="action_drive_file_folder" model="ir.actions.act_window">
        <field name="name">File / Folders</field>
        <field name="res_model">drive.file</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_drive_file_folder" name="File / Folder"
        action="action_drive_file_folder"
        sequence="30"
        parent="menu_google_drive_manager"/>

    <record id="action_drive_file_type" model="ir.actions.act_window">
        <field name="name">Drive Category</field>
        <field name="res_model">drive.file.type</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_drive_file_type" name="Drive File Type"
        action="action_drive_file_type"
        sequence="40"
        parent="menu_google_drive_manager"/>

    <record id="action_drive_tag" model="ir.actions.act_window">
        <field name="name">Drive Tag</field>
        <field name="res_model">drive.tag</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_drive_tag" name="Drive Tag"
        action="action_drive_tag"
        sequence="50"
        parent="menu_google_drive_manager"/>
</odoo>

