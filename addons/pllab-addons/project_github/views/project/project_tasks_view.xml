<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="view_project_task_form_inherit" model="ir.ui.view">
            <field name="name">view.project.task.form.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2" />
            <field name="arch" type="xml">
                <xpath expr="//form/header" position="inside">
                    <button name="check_issue_exist" type="object"
                        string="Check Issue Exist" class="oe_highlight"
                        groups="project.group_project_manager"></button>
                    <button name="pull_issue_info" type="object"
                        string="Pull Issue Info" class="oe_highlight"
                        groups="project.group_project_manager"></button>
                    <button name="push_issue_info" type="object"
                        string="Push Issue Info" class="oe_highlight"
                        groups="project.group_project_manager"></button>
                    <button name="merge_issue_info" type="object"
                        string="Merge Issue Info" class="oe_highlight"
                        groups="project.group_project_manager"></button>
                    <button name="create_issue" type="object"
                        string="Create Issue" class="oe_highlight"
                        groups="project.group_project_manager"></button>
                </xpath>
                <field name="tag_ids" position="after">
                    <field name="issue_number" />
                    <field name="issue_url" widget="url"/>
                </field>
                <field name="project_id" position="after">
                    <field name="milestone_id" />
                </field>
            </field>
        </record>

    </data>
</openerp>
