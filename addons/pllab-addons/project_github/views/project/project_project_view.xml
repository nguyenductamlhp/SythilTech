<?xml version="1.0" ?>
<openerp>
    <data>
        <record id="project_project_form_inherit" model="ir.ui.view">
            <field name="name">project.project.form.inherit</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="pull_repo_milestone" string="Pull Milestone"
                            type="object" class="oe_highlight"
                            groups="project.group_project_manager"/>
                    </header>
                </xpath>
                <xpath expr="//form/sheet/notebook/page[@name='settings']/group/field[@name='user_id']" position="after">
                    <field name="repository"></field>
                    <field name="repo_owner_id"></field>
                </xpath>
                <xpath expr="//form/sheet/notebook" position="after">
                    <field name="milestone_ids" groups="project.group_project_manager">
                        <tree>
                            <field name="name" />
                            <field name="description" />
                            <field name="state" />
                        </tree>
                    </field>
                </xpath>
            </field>
        </record>
    </data>
</openerp>