<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_code_model_form" model="ir.ui.view">
            <field name="name">view.code.model.form</field>
            <field name="model">code.model</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="model_string" placeholder="Model Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="model_name" />
                                <field name="is_inherit"/>
                            </group>
                            <group>
                                <field name="model_type" />
                            </group>
                        </group>
                        <group string="Note">
                            <field name="note" nolabel="1"/>
                        </group>
                        <group string="Fields">
                            <field name="field_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="field_string" />
                                    <field name="field_name" />
                                    <field name="is_required" />
                                    <field name="is_readonly" />
                                    <field name="field_type" />
                                    <field name="field_help" />
                                </tree>
                            </field>
                        </group>
                        <notebook>
                            <page string="Model Definition">
                                <field name="model_define" widget="ace" options="{'mode': 'python'}"/>
                            </page>
                            <page string="List View Definition">
                                <field name="list_view_define" widget="ace" options="{'mode': 'xml'}"/>
                            </page>
                            <page string="Form View Definition">
                                <field name="form_view_define" widget="ace" options="{'mode': 'xml'}"/>
                            </page>
                            <page string="Menu Action Definition">
                                <field name="menu_action_define" widget="ace" options="{'mode': 'xml'}"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_code_model_tree" model="ir.ui.view">
            <field name="name">view.code.model.tree</field>
            <field name="model">code.model</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="model_string" />
                    <field name="model_name" />
                    <field name="is_inherit" />
                    <field name="model_type" />
                </tree>
            </field>
        </record>
    </data>
</odoo>