<?xml version="1.0" ?>
<odoo>
    <data>
        <record id="view_dev_server_tree" model="ir.ui.view">
            <field name="name">view.dev.server.tree</field>
            <field name="model">dev.server</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="n_core" string="CPU"/>
                    <field name="cron_workers" string="Cron CPU"/>
                    <field name="server_ram" string="RAM"/>
                    <field name="concurrent_user" string="Concurrent User"/>
                </tree>
            </field>
        </record>

        <record id="view_dev_server_form" model="ir.ui.view">
            <field name="name">view.dev.server.form</field>
            <field name="model">dev.server</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h2><field name="name" placeholder="Name"/></h2>
                        </div>
                        <group>
                            <group string="CPU Configuration">
                                <field name="n_core" string="CPU (cores)"/>
                                <field name="cron_workers" string="Cron for CPU"/>
                            </group>
                            <group string="Workers Configuration">
                                <field name="concurrent_user" string="Concurrent User"/>
                                <field name="workers" string="Number of Workers"/>
                            </group>
                        </group>
                        <group>
                            <group string="Memory Configuration">
                                <field name="server_ram" string="RAM (GB)"/>
                            </group>
                            <group string="Memory Configuration">
                                <field name="propose_ram"></field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>