<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_drive_tag_form" model="ir.ui.view">
        <field name="name">view.drive.tag.form</field>
        <field name="model">drive.tag</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="description" />
                </group>
                <group>
                    <field name="file_ids" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_drive_tag_tree" model="ir.ui.view">
        <field name="name">view.drive.tag.tree</field>
        <field name="model">drive.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="description" />
            </tree>
        </field>
    </record>

</odoo>
