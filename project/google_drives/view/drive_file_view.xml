<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_drive_file_form" model="ir.ui.view">
        <field name="name">view.drive.file.form</field>
        <field name="model">drive.file</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="set_parent" string="Find Parent" type="object" class="oe_highlight"></button>
                </header>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Name"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="file_id" />
                        <field name="code" />
                        <field name="parent_file_id" groups="base.group_no_one"/>
                        <field name="parent_id" />
                        <field name="drive_id" />
                    </group>
                    <group>
                        <field name="is_dir" />
                        <field name="type_id" />
                        <field name="shared" />
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <group>
                    <field name="web_content_link" widget="url"/>
                    <field name="web_view_link" widget="url" />
                </group>
                <group string="Description">
                    <field name="description" nolabel="1"/>
                </group>
                <group string="Children">
                    <field name="child_ids" nolabel="1" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_drive_file_tree" model="ir.ui.view">
        <field name="name">view.drive.file.tree</field>
        <field name="model">drive.file</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="parent_id" />
                <field name="drive_id" />
                <field name="type_id" />
                <field name="tag_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

</odoo>

