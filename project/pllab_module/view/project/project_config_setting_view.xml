<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.ovetime</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="115"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='project']" position="inside">
                    <h2>Project Defaults</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-md-6 col-xs-12 o_settings_container">
                            <group>
                                <group>
                                    <div class="o_setting_left_pane">
                                        <label for="default_project_stage_ids" string="Default Stages"/>
                                    </div>
                                </group>
                                <group>
                                    <div>
                                        <field name="default_project_stage_ids" widget="many2many_tags" />
                                    </div>
                                </group>
                            </group>
                        </div>
                    </div>
                </xpath>
            </field>
    </record>

</odoo>
