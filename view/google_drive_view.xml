<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_google_drive_form" model="ir.ui.view">
        <field name="name">view.google.drive.account.form</field>
        <field name="model">google.drive.account</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="sync_drive_files" string="Sync Drive's files" type="object" class="oe_highlight"></button>
                    <button name="generate_credential_file" string="Generate credential files" type="object" class="oe_highlight"></button>
                    <button name="set_file_parents" string="Set File's Parent" type="object" class="oe_highlight"></button>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="username" />
                            <field name="url" />
                            <field name="max_query_file" />
                        </group>
                        <group>
                            <field name="description" />
                        </group>
                    </group>
                    <group string="Configuration" class="oe_edit_only">
                        <field name="token_path" groups="base.group_no_one"/>
                        <field name="credential_path" groups="base.group_no_one"/>
                        <field name="credential" nolabel="1" style="width:190%%"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_google_drive_tree" model="ir.ui.view">
        <field name="name">view.google.drive.account.tree</field>
        <field name="model">google.drive.account</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="username" />
                <field name="description" />
            </tree>
        </field>
    </record>

</odoo>

