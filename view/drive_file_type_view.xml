<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_drive_file_type_form" model="ir.ui.view">
        <field name="name">view.drive.file.type.form</field>
        <field name="model">drive.file.type</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="code" />
                    <field name="is_dir" />
                    <field name="description" />
                </group>
            </form>
        </field>
    </record>

    <record id="view_drive_file_type_tree" model="ir.ui.view">
        <field name="name">view.drive.file.type.tree</field>
        <field name="model">drive.file.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" />
                <field name="is_dir" />
                <field name="description" />
            </tree>
        </field>
    </record>

</odoo>
